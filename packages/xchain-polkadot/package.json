{
  "name": "@xchainjs/xchain-polkadot",
  "version": "0.4.0",
  "description": "Custom Polkadot client and utilities used by XChainJS clients",
  "keywords": [
    "THORChain",
    "XChain",
    "Polkadot"
  ],
  "author": "THORChain",
  "homepage": "https://github.com/xchainjs/xchainjs-lib",
