{
  "name": "@xchainjs/xchain-midgard-query",
  "version": "1.0.4",
  "license": "MIT",
  "description": "Module that is responsible for get data from Midgard API",
  "keywords": [
    "XChain"
  ],
  "author": "THORChain",
  "homepage": "https://github.com/xchainjs/xchainjs-lib#readme",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:xchainjs/xchainjs-lib.git"
  },
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf lib",
    "build": "yarn clean && rollup -c",
    "build:release": "yarn exec rm -rf release && yarn pack && yarn exec \"mkdir release && tar zxvf package.tgz --directory release && rm package.tgz\"",
    "test": "jest",
    "e2e": "jest --config jest.config.e2e.js",
    "lint": "eslint \"{src,__tests__}/**/*.ts\" --fix --max-warnings 0",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "@xchainjs/xchain-client": "workspace:*",
    "@xchainjs/xchain-midgard": "workspace:*",
    "@xchainjs/xchain-util": "workspace:*",
    "axios": "1.7.4",
    "axios-retry": "3.2.5"
  },
  "devDependencies": {
    "axios-mock-adapter": "1.20.0",
    "dotenv": "16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "release/package"
  }
}
