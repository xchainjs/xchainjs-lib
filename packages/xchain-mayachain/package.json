{
  "name": "@xchainjs/xchain-mayachain",
  "version": "2.0.2",
  "description": "Custom Mayachain client and utilities used by XChainJS clients",
  "keywords": [
    "MAYAChain",
    "XChain"
  ],
  "author": "MAYAChain",
  "homepage": "https://github.com/xchainjs/xchainjs-lib",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:xchainjs/xchainjs-lib.git"
  },
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf lib",
    "build": "yarn clean && rollup -c",
    "build:release": "yarn exec rm -rf release && yarn pack && yarn exec \"mkdir release && tar zxvf package.tgz --directory release && rm package.tgz\"",
    "test": "jest",
    "e2e": "jest --config jest.config.e2e.js",
    "lint": "eslint \"{src,__tests__}/**/*.ts\" --fix --max-warnings 0",
    "start:example": "ts-node example/index.ts",
    "generate:MayachainMsgs": "./genMsgs.sh"
  },
  "dependencies": {
    "@cosmjs/amino": "0.31.1",
    "@cosmjs/crypto": "0.31.1",
    "@cosmjs/encoding": "0.31.1",
    "@cosmjs/proto-signing": "0.31.1",
    "@xchainjs/xchain-client": "workspace:*",
    "@xchainjs/xchain-cosmos-sdk": "workspace:*",
    "@xchainjs/xchain-util": "workspace:*",
    "axios": "1.7.4",
    "bech32": "^1.1.3",
    "bignumber.js": "9.0.0",
    "bip32": "^2.0.6",
    "cosmjs-types": "0.8.0",
    "protobufjs": "6.11.4",
    "secp256k1": "^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "release/package"
  }
}
