{
  "name": "@xchainjs/xchain-cosmos",
  "version": "3.0.3",
  "description": "Custom Cosmos client and utilities used by XChainJS clients",
  "keywords": [
    "XChain",
    "Cosmos"
  ],
  "author": "XChainJS",
  "homepage": "https://github.com/xchainjs/xchainjs-lib",
  "license": "MIT",
  "type": "module",
  "exports": {
    "require": "./lib/index.cjs",
    "import": "./lib/index.esm.js"
  },
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:xchainjs/xchainjs-lib.git"
  },
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf lib",
    "build": "yarn clean && rollup -c --bundleConfigAsCjs",
    "build:release": "yarn exec rm -rf release && yarn pack && yarn exec \"mkdir release && tar zxvf package.tgz --directory release && rm package.tgz\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "e2e": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.e2e.mjs",
    "lint": "eslint \"{src,__tests__}/**/*.ts\" --fix --max-warnings 0"
  },
  "dependencies": {
    "@bitcoin-js/tiny-secp256k1-asmjs": "^2.2.3",
    "@cosmjs/amino": "0.33.1",
    "@cosmjs/encoding": "0.33.1",
    "@cosmjs/ledger-amino": "0.33.1",
    "@cosmjs/proto-signing": "0.33.1",
    "@cosmjs/stargate": "0.33.1",
    "@ledgerhq/hw-app-cosmos": "6.32.0",
    "@ledgerhq/hw-transport": "^6.31.6",
    "@scure/bip32": "^1.7.0",
    "@xchainjs/xchain-client": "workspace:*",
    "@xchainjs/xchain-cosmos-sdk": "workspace:*",
    "@xchainjs/xchain-crypto": "workspace:*",
    "@xchainjs/xchain-util": "workspace:*",
    "axios": "1.8.4",
    "bech32": "^1.1.3",
    "bignumber.js": "^9.1.2",
    "cosmjs-types": "0.9.0",
    "protobufjs": "6.11.4"
  },
  "devDependencies": {
    "@ledgerhq/hw-transport-node-hid": "6.28.6"
  },
  "publishConfig": {
    "access": "public",
    "directory": "release/package"
  }
}
