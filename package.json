{
  "description": "XChainJS Chain Clients MonoRepo",
  "devDependencies": {
    "@actions/core": "1.10.0",
    "@changesets/cli": "2.27.1",
    "@types/bun": "1.1.0",
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-ordered-imports": "^0.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.2.0",
    "rimraf": "5.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "10.9.2",
    "tslib": "^2.5.0",
    "turbo": "1.13.0",
    "typescript": "^5.0.4",
    "yarn-audit-ci": "^1.2.0"
  },
  "name": "root",
  "packageManager": "bun@1.1.4",
  "private": true,
  "resolutions": {
    "@babel/traverse": "7.23.2",
    "socks": "2.7.3"
  },
  "scripts": {
    "build": "turbo run build --no-cache",
    "build:examples": "tsc examples/**/*.ts --noEmit --skipLibCheck",
    "build:tools": "tsc tools/**/*.ts --noEmit --skipLibCheck",
    "clean": "rm -rf ./.turbo && turbo run clean",
    "clean:nodemodules": "rm -rf ./packages/*/node_modules && rm -rf ./node_modules && rm -rf ./examples/**/node_modules",
    "e2e": "turbo run e2e",
    "increase-packages": "bun changeset version",
    "lint": "turbo run lint",
    "notification:prepare": "ts-node scripts/notification.ts",
    "pub": "turbo publish",
    "publish-packages": "turbo run build test --cache-dir=.turbo && bun run increase-packages && bun changeset publish",
    "test": "turbo run test --cache-dir=.turbo",
    "update-packages": "bun changeset"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}